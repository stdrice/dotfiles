#!/usr/bin/env bash

get_volume(){
    pamixer --get-volume-human
}

volume_up(){
    pamixer --allow-boost --set-limit 150 -i 2
}

volume_down(){
    pamixer --allow-boost --set-limit 150 -d 2
}

toggle_mute(){
    pamixer --toggle-mute
}

notify_cmd(){ 
    dunstify -a 'no' --hints=int:value:"$(get_volume)" "ðŸ”Š $(get_volume)"
}

case "$1" in
	--up) volume_up
        notify_cmd ;;
	--down) volume_down
            notify_cmd ;;
	--toggle) toggle_mute
            notify_cmd ;;
esac
