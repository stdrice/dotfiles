configuration {
  modi: "drun";
  display-drun: "";
  show-icons: true;
  drun-display-format: "{icon}  {name}";
  font: "sans 10";
}

@theme "/dev/null"

* {
  bg: #000000;
  fg: #f8f8f6;
  al: #505050;
  border-radius: 0px;
  background-color: @bg;
  text-color: @fg;
}

window {
  location: center;
  width: 25%;
  height: 65%;
  spacing: 0;
  children: [ box ];
}

box {
  padding: 0.75em;
  spacing: 0.5em;
  children: [ entry, listview ];
}

entry {
  placeholder: "Search...";
  placeholder-color: @al;
  padding: 0.5em;
  expand: false;
}

element {
  text-color: @al;
  padding: 0.5em;
}
element selected {
  text-color: @fg;
}
element-text, element-icon {
  background-color: inherit;
  text-color: inherit;
}

listview {
  lines: 10;    
}

listview, element, element selected, element-text, element-icon {
  cursor: pointer;
}
